    "def star():\n",
    "    num = int(input('숫자를 입력해 주세요 : '))\n",
    "    for i in range(num):\n",
    "        for j in range (num - i - 1):\n",
    "            print(' ', end='')\n",
    "        for k in range (i+1):\n",
    "            print('*', end='')\n",
    "            if k == i:\n",
    "                print('')\n",
    "star()"
